{
	"name": "Time Wasters",
	"version": "1.0",
	"description": "Find out how much time you've been wasting on stupid websites",
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"background": {
	  "scripts": ["background.js"],
	  "persistent": false
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
	    	"16": "images/tw16.png",
	    	"32": "images/tw32.png",
	    	"48": "images/tw48.png",
	    	"128": "images/tw128.png"
		}
	},
	"icons": {
	    "16": "images/tw16.png",
	    "32": "images/tw32.png",
	    "48": "images/tw48.png",
	    "128": "images/tw128.png"
	},
	"manifest_version": 2
}